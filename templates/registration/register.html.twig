{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<section class="container my-5 position-relative">
    <div class="row justify-content-center position-relative">
        <div class="col-md-6 col-lg-6 bg-white p-4 rounded shadow-sm div-form" >

            <h1 class="h3 mb-4 font-weight-bold text-center">Inscrivez-vous</h1>

            <form method="post">

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}

                    <div class="form-group mb-3">
                        <label for="{{ registrationForm.roles.vars.id }}"> Vous vous inscrivez en tant que </label><br>
                        {% for choice in registrationForm.roles %}
                            <div class="form-check form-check-inline">
                                {{ form_widget(choice, {'attr': {'class': 'form-check-input role-selector'}}) }}
                                <label class="form-check-label" for="{{ choice.vars.id }}">{{ choice.vars.label }}</label>
                            </div>
                        {% endfor %}
                    </div>

                    {# campi aggiuntivi per l'azienda #}
                    <div id="company-fields" style="display: none;">
                        <p>Champs pour enregistrer votre entreprise</p>
                        <div class="form-group mb-3">
                            {{ form_row(registrationForm.nom_entreprise, {
                                label: 'Nom de l\'entreprise',
                            }) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(registrationForm.adresse_entreprise, { 
                                label: 'Adresse de l\'entreprise',
                            }) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(registrationForm.email_entreprise, { 
                                label: 'E-mail de l\'entreprise',
                            }) }}
                        </div>
                        <hr>
                    </div> 
                    {# fine campi azienda #}

                    <div class="form-group mb-3">
                        {{ form_row(registrationForm.prenom, { 
                            label: 'Pr√©nom',  
                        })}}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(registrationForm.nom, { 
                            label: 'Nom',
                        })}}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(registrationForm.adresse, { 
                            label: 'Adresse',   
                        })}}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(registrationForm.code_postal, { 
                            label: 'Code postal',
                        })}}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(registrationForm.ville, { 
                            label: 'Ville',
                        })}}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(registrationForm.email, { 
                            label: 'E-mail'    
                        })}}
                    </div>

                    <div class="form-group mb-3" >
                        {{ form_row(registrationForm.plainPassword.first) }}                       
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(registrationForm.plainPassword.second) }}                       
                    </div>
                    <div id="password-message" class="mt-2 mb-2"></div>
                    
                    <div class="form-group mb-3 d-flex align-items-center">
                        {{ form_widget(registrationForm.agreeTerms, { attr: { class: 'form-check-input' } }) }}
                        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions', { label_attr: { class: 'form-check-label ms-2' } }) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                    
                    <br>
                    <button type="submit" class="btn btn-outline-dark mt-4 mb-4 btn-register">M'inscrire</button>
                    <div class="text-end mb-3">
                        <a href="{{ path('app_login') }}" class="text-end link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover login-link">Retour au login</a>
                    </div>

                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
</section>

{% endblock %}
