{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Réinitialiser votre mot de passe</h1>

    <div class="container my-3 d-flex justify-content-center">
        {{ form_start(resetForm) }}
            <div class="my-5">
                {{ form_row(resetForm.plainPassword, {'label_attr': {'class': 'me-3'}} ) }}
            </div>
            <button class="btn btn-reset mt-5 mb-5">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
