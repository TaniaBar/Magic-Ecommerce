{% extends 'base.html.twig' %}

{% block title %}Produits magiques{% endblock %}

{% block body %}
    <section class="container my-4">
        <div class="row">
            {% for produit in produits %}
                
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card" >
                        <div class="div-img">
                            <img src="{{ asset('images/' ~ produit.getImageChemin()) }}" class="card-img-top" alt="{{ produit.nom }}">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center fw-bold fs-3">{{produit.nom}}</h5>
                            <p class="card-text text-center fs-5 produit-description"> {{produit.description}}
                            </p>
                            <p class="card-text text-center fw-bold">{{produit.prix}} €</p>
                            <a href="#" class="btn btn-outline mt-4 mb-4" >Détails</a>
                            <a href="#" class="btn btn-outline">Ajouter au panier</a>                            
                        </div>
                    </div>
                </div>
                
            {% endfor %}
        </div>
    </section>
{% endblock %}
