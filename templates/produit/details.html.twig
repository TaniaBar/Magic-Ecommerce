{% extends 'base.html.twig' %}

{% block title %}Détails produit {{ produit.nom }} {% endblock %}

{% block body %}

    <h2 class="text-center mt-3 fw-bold" >Détails de {{ produit.nom }}</h2>

    <div class="text-start ms-5 my-4">
        <a href="{{ path('app_produit_index') }}" class="link-opacity-75-hover a-inWines fw-bold fs-5 text-uppercase">← retour aux produits </a>
    </div>

    <section class="container my-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="div-img">
                        <img src="{{ asset('images/' ~ produit.getImageChemin()) }}" class="card-img-top" alt="{{ produit.nom }}">
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center fw-bold fs-3 mb-3">{{produit.nom}}</h5>
                        <p class="card-text text-center fs-5 produit-description"> {{produit.description}}
                        </p>
                        <p class="card-text text-center fw-bold text-danger">{{produit.prix}} €</p>
                        <div class="mt-auto d-flex justify-content-between">
                            <a href="#" class="btn btn-outline-secondary mt-4 mb-3">Ajouter au panier</a> 
                        </div>                           
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}